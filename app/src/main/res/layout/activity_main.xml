<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-28dp"
    tools:layout_editor_absoluteY="-6dp">


    <TextView
        android:id="@+id/textViewEv"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:background="@android:drawable/editbox_background"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center_vertical"
        android:hint="Select EV"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTraditional"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:background="@android:drawable/editbox_background"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center_vertical"
        android:hint="Select traditional car"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewEv"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextElectricityPrice"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/textViewEv"
        app:layout_constraintTop_toBottomOf="@+id/textViewEv" />

    <TextView
        android:id="@+id/textViewElectricityPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electricity price €"
        app:layout_constraintStart_toStartOf="@+id/editTextElectricityPrice"
        app:layout_constraintTop_toBottomOf="@+id/editTextElectricityPrice" />

    <TextView
        android:id="@+id/textViewDistancePerMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance per Month (KM)"
        app:layout_constraintStart_toStartOf="@+id/editTextDistancePerMonth"
        app:layout_constraintTop_toBottomOf="@+id/editTextDistancePerMonth" />

    <CheckBox
        android:id="@+id/checkBoxBusiness"
        android:layout_width="90dp"
        android:layout_height="56dp"
        android:text="Business"
        app:layout_constraintEnd_toEndOf="@+id/editTextGasPrice"
        app:layout_constraintTop_toTopOf="@+id/editTextDistancePerMonth" />

    <EditText
        android:id="@+id/editTextGasPrice"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/textViewTraditional"
        app:layout_constraintTop_toTopOf="@+id/editTextElectricityPrice" />

    <TextView
        android:id="@+id/textViewGasPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Price €"
        app:layout_constraintStart_toStartOf="@+id/editTextGasPrice"
        app:layout_constraintTop_toBottomOf="@+id/editTextGasPrice" />

    <EditText
        android:id="@+id/editTextDistancePerMonth"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/editTextElectricityPrice"
        app:layout_constraintTop_toBottomOf="@+id/editTextElectricityPrice" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Calculate"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/editTextGasPrice"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxBusiness" />

</androidx.constraintlayout.widget.ConstraintLayout>